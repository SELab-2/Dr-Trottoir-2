{
  "root": true,
  "plugins": ["prettier", "react-hooks"],
  "extends": [
    "next",
    "eslint:recommended",
    "prettier"
  ],
  "rules": {
    "no-useless-escape": "off",
    "no-unused-vars": "off",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
    "react-hooks/exhaustive-deps": "warn" // Checks effect dependencies
  },
  "env": {
    "node": true,
    "commonjs": true
  }
}